<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="AppTheme.Base">
		<!-- Customize your theme here. -->
	</style>

	<style name="TransparentStatusBar" parent="AppTheme.Base">
		<!-- Customize your theme here. -->
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay"
	       parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<!--if you don't set this the background will be black when you slide.-->
		<item name="android:windowIsTranslucent">true</item>
		<!--set the right in/out animation of Activity,you can change this to yours-->
		<item name="android:windowAnimationStyle">@style/SlideRightAnimation
		</item>
	</style>


	<style name="ToolbarStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">130px</item>
		<item name="android:paddingTop">30px</item>
		<item name="android:background">@color/colorPrimary</item>
		<item name="navigationIcon">@drawable/navigationbar_back</item>
		<item name="maxButtonHeight">88px</item>
		<item name="title">" "</item>
		<item name="android:title">" "</item>
		<item name="android:id">@+id/toolbar</item>
		<item name="layout_auto_basewidth">height</item>
		<item name="android:layout_centerVertical">false</item>
		<item name="android:gravity">bottom</item>
	</style>
	<!--Toolbar 中间title-->
	<style name="ToolbarCenterTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:textSize">@dimen/text_size_xlarge</item>
		<item name="android:textColor">@color/cl_ffffffff</item>
		<item name="android:layout_marginTop">12px</item>
		<item name="android:gravity">center</item>
		<item name="android:id">@+id/tvCenterTitle</item>
		<item name="android:textStyle">normal</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<!--toolbar 右侧文字style-->
	<style name="ToolbarRightText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:minWidth">88px</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingLeft">24px</item>
		<item name="android:paddingRight">24px</item>
		<item name="android:textColor">@color/cl_ffffffff</item>
		<item name="android:textSize">30px</item>
	</style>

	<!--toolbar 右侧文字style-->
	<style name="ToolbarRightImageView" parent="ToolbarRightText">
		<item name="android:layout_width">88px</item>
		<item name="android:paddingLeft">24px</item>
		<item name="android:paddingRight">24px</item>
		<item name="android:scaleType">centerInside</item>
	</style>

	<!--滑动关闭动画-->
	<style name="SlideRightAnimation" parent="@android:style/Animation.Activity">
		<item name="android:activityOpenEnterAnimation">@anim/slide_in_right
		</item>
		<item name="android:activityOpenExitAnimation">@anim/slide_out_right
		</item>
		<item name="android:activityCloseEnterAnimation">@anim/slide_in_right
		</item>
		<item name="android:activityCloseExitAnimation">@anim/slide_out_right
		</item>
		<item name="android:taskOpenEnterAnimation">@anim/slide_in_right</item>
		<item name="android:taskOpenExitAnimation">@anim/slide_out_right</item>
		<item name="android:taskCloseEnterAnimation">@anim/slide_in_right</item>
		<item name="android:taskCloseExitAnimation">@anim/slide_out_right</item>
		<item name="android:taskToFrontEnterAnimation">@anim/slide_in_right
		</item>
		<item name="android:taskToFrontExitAnimation">@anim/slide_out_right
		</item>
		<item name="android:taskToBackEnterAnimation">@anim/slide_in_right
		</item>
		<item name="android:taskToBackExitAnimation">@anim/slide_out_right
		</item>
	</style>


	<style name="ListItemStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">140px</item>
		<item name="style">@style/RippleTheme</item>
		<item name="android:paddingLeft">40px</item>
		<item name="android:paddingRight">40px</item>
	</style>

	<style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
		<item name="android:background">@drawable/background_tablayout</item>
		<item name="tabIndicatorColor">@color/cl_07a9fa</item>
		<item name="tabMode">fixed</item>
		<item name="tabSelectedTextColor">@color/cl_07a9fa</item>
		<item name="tabTextColor">@color/cl_534741</item>
		<item name="tabIndicatorHeight">9px</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">100px</item>
		<item name="android:maxHeight">100px</item>

		<!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
		<item name="tabPaddingStart">12dp</item>
		<item name="tabPaddingEnd">12dp</item>
		<item name="tabBackground">?attr/selectableItemBackground</item>
		<item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
	</style>


	<style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">?android:textColorSecondary</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="TabLayoutStyle.Blue">
		<item name="textAllCaps">false</item>
		<item name="tabIndicatorColor">@color/cl_ffffffff</item>
		<item name="android:background">@color/cl_07a9fa</item>
		<item name="tabSelectedTextColor">@color/cl_ffffffff</item>
		<item name="tabTextColor">@color/cl_534741</item>
	</style>

	<!--个人操作-->
	<style name="PersonalOperationStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textColor">@color/color_80313133_selector</item>
		<item name="android:background">@drawable/ripple</item>
		<item name="android:textSize">30px</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- gif动画 -->
	<declare-styleable name="GifView">
		<attr name="gif" format="reference"/>
		<attr name="paused" format="boolean"/>
	</declare-styleable>
	<declare-styleable name="CustomTheme">
		<attr name="gifViewStyle" format="reference"/>
	</declare-styleable>

	<style name="popupAnimation" parent="android:Animation">
		<item name="android:windowEnterAnimation">@anim/in</item>
		<item name="android:windowExitAnimation">@anim/out</item>
	</style>


	<style name="menu_left_text_style">
		<item name="android:textColor">#404b64</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
	</style>


	<style name="menu_left_text_stylet">
		<item name="android:textColor">#404b64</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_height">35dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
	</style>

	<style name="small_menu_left_text_style">
		<item name="android:textColor">#404b64</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_marginLeft">22dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
	</style>

	<style name="top_category_scroll_view_item_text">
		<item name="android:textSize">18.0sp</item>
		<item name="android:gravity">center</item>
	</style>


	<!-- Dialog 背景透明-->
	<style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
		<item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
		<item name="android:windowBackground">@android:color/transparent
		</item>  <!-- 设置window背景透明，也就是去边框 -->
	</style>


	<style name="cart_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:backgroundDimAmount">0.6</item>
	</style>


	<style name="userbaseinfo_menu_left_text_style">
		<item name="android:textColor">#404b64</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
		<!--
		<item name="android:focusableInTouchMode">true</item>
		<item name="android:focusable">true</item>
		-->
	</style>


	<style name="userbaseinfo_menu_right_text_style">
		<item name="android:textColor">#1e2126</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:gravity">right</item>
	</style>
</resources>
